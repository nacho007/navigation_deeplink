<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_balloon_pressed" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/shape_balloon_border_radius" android:topRightRadius="@dimen/shape_balloon_border_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/color_balloon" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/shape_balloon_border_radius" android:topRightRadius="@dimen/shape_balloon_border_radius" />
        </shape>
    </item>
</selector>